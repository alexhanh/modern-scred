!!!
%html
  %head
    %title Scred
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    %p.notice= notice
    %p.alert= alert

  - if user_signed_in?
    = "Hi, #{current_user.name}!"
    = image_tag(current_user.image_url)
  - else
    = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook)

    = yield