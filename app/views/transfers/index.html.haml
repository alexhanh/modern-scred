%table
  %tr
    %td Creditor
    %td Debtor
    %td Amount
    %td Message
    %td 
  - for transfer in @transfers
    %tr
      %td= transfer.creditor.name
      %td= transfer.debtor.name
      %td= transfer.amount
      %td= transfer.message
      - if transfer.creator_id == current_user.id
        %td= link_to 'Destroy', transfer, :confirm => 'Are you sure?', :method => :delete
      - else
        %td